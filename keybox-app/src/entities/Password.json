{
  "name": "Password",
  "type": "object",
  "properties": {
    "site_name": {
      "type": "string",
      "description": "Name of the website or service"
    },
    "site_url": {
      "type": "string",
      "description": "URL of the website"
    },
    "username": {
      "type": "string",
      "description": "Username or email for the account"
    },
    "password": {
      "type": "string",
      "description": "Encrypted password"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes about the account"
    },
    "category": {
      "type": "string",
      "enum": [
        "social",
        "banking",
        "work",
        "entertainment",
        "shopping",
        "email",
        "other"
      ],
      "default": "other",
      "description": "Category of the password"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a frequently used password"
    },
    "shared_with_family": {
      "type": "boolean",
      "default": false,
      "description": "Whether this password is shared with family members"
    },
    "last_used": {
      "type": "string",
      "format": "date-time",
      "description": "When this password was last accessed"
    },
    "strength_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Password strength score"
    }
  },
  "required": ["site_name", "username", "password"]
}
